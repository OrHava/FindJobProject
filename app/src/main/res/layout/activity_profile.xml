<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:id="@+id/LayoutProfile"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/orange_block">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/archivo_black"
            android:text="Name: "
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/profile_lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/archivo_black"
            android:text="Last name: "
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/profile_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/archivo_black"
            android:text="Age: "
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/archivo_black"
            android:text="Email: "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/profile_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="200dp"
            android:fontFamily="@font/archivo_black"
            android:text="Phone: "
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/profile_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="240dp"
            android:fontFamily="@font/archivo_black"
            android:text="City: "
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/profile_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="280dp"
            android:fontFamily="@font/archivo_black"
            android:text="Gender: "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/private_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:text="private info:"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/account"
            app:tint="#000000" />


        <EditText
            android:id="@+id/profile_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="27dp"
            android:hint="Name"
            android:inputType="text"
            android:shadowColor="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/profile_edit_lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="67dp"
            android:hint="Last name"
            android:inputType="text"
            android:shadowColor="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/profile_edit_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="107dp"
            android:hint="Age"
            android:inputType="text"
            android:shadowColor="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/profile_edit_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="147dp"
            android:hint="Email"
            android:inputType="text"
            android:shadowColor="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/profile_edit_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="187dp"
            android:hint="Phone"
            android:inputType="phone"
            android:shadowColor="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/profile_edit_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="227dp"
            android:hint="City"
            android:inputType="text"
            android:shadowColor="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <RadioGroup
            android:id="@+id/RadioGroupGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="35dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:textAlignment="center">

            <RadioButton
                android:id="@+id/radio_Male"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:button="@drawable/male_gender"
                android:buttonTint="@color/black"
                android:gravity="center"
                android:onClick="onRadioButtonClicked"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radio_Female"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_margin="5dp"
                android:button="@drawable/female_gender"
                android:buttonTint="@color/black"
                android:gravity="center"
                android:onClick="onRadioButtonClicked"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radio_NoBinary"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:button="@drawable/unknown_gender"
                android:buttonTint="@color/black"
                android:gravity="center"
                android:onClick="onRadioButtonClicked"
                android:textColor="@color/black" />


        </RadioGroup>
        <ImageView
            android:id="@+id/profile_save"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/ic_baseline_save_24" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/LayoutCv"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/orange_block">


        <ImageView
            android:id="@+id/pdf_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/pdf" />

        <ImageView
            android:id="@+id/cv_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/cv" />

        <TextView
            android:id="@+id/upload_cv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:text="upload cv:"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </RelativeLayout>






</RelativeLayout>